<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Here Now"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:padding="5dp"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/lpu5"

        android:id="@+id/chooseProfileImage"
        android:onClick="loginInImage"
        android:scaleType="centerCrop"

      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Picture"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/loginColor"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:id="@+id/nameFld"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Registration No "
        android:padding="20dp"
        android:backgroundTint="@color/white"
        android:id="@+id/regFld"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Login Password must be atleast 8 digits "
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:id="@+id/passwordFld"
        android:backgroundTint="@color/white"
        
        android:textColor="@color/black"
        android:textColorHint="@color/white"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:gravity="center"

    >

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:textColor="@color/yellow"
        android:layout_margin="10dp"
        android:onClick="login"
        android:padding="5dp"
        android:text="Login"
        android:textSize="20sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/round_button"

        android:onClick="goToSingPage"
        android:textColor="@color/blue"
       />
</LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>